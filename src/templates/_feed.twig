{% spaceless %}
    <?xml version="1.0" encoding="UTF-8"?>
    <storedata>
        <created_at>{{ 'now'|date('Y-m-d H:i') }}</created_at>
        <products>
            {% for element in elements %}
                {% set colors = craft.skroutzXmlFeedPro.elementColors(element) %}
                {% if colors|length %}
                    {% for color, data in colors %}
                        {% include 'skroutz-xml-feed-pro/_includes/product' with data %}
                    {% endfor %}
                {% else %}
                    {% include 'skroutz-xml-feed-pro/_includes/product' %}
                {% endif %}
            {% endfor %}
        </products>
    </storedata>
{% endspaceless %}
